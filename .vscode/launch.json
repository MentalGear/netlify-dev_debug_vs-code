{
  // Use IntelliSense to learn about possible attributes.
  // Hover to view descriptions of existing attributes.
  // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
  "version": "0.2.0",
  "configurations": [
    // FULLSTACK DEBUG
    {
      "name": "client: chrome",
      "comment": "Client FrontEnd Debug",
      "type": "chrome",
      "request": "launch",
      "url": "http://localhost:8888",
      "webRoot": "${workspaceFolder}",
      "sourceMapPathOverrides": {
        "webpack:///*": "${workspaceRoot}/*"
      }
    },
    {
      "name": "netlify dev: yarn dev",
      "comment": "Nuxt via netlify dev with serverless Backend (netlify functions)",
      "type": "node",
      "request": "launch",
      "skipFiles": ["<node_internals>/**"],
      "program": "${workspaceFolder}/node_modules/.bin/netlify",
      "args": ["dev", "--inspect"],
      "resolveSourceMapLocations": [
        // NOTE: your  linter may think the property shouldn't here yet
        // it works for finding the source maps
        "${workspaceFolder}/**",
        "!**/node_modules/**"
      ]
    }
  ],
  "compounds": [
    {
      "name": "Fullstack Debugging",
      "configurations": ["netlify dev: yarn dev", "client: chrome"]
    }
  ]
}
